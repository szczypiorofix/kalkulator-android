<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.piotrek.kalkulator.MainActivity"
    android:background="@color/activity_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:id="@+id/eWynik"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="@string/eWynik"
            android:gravity="center|right"
            android:background="@drawable/textfield"
            android:textColor="#000000"
            android:maxLength="15"
            android:paddingRight="15dp"
            android:paddingLeft="5dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eError"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true"
            android:orientation="horizontal">


            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsC"
                android:id="@+id/bC"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsBack"
                android:id="@+id/bBack"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp" />

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsSqrt"
                android:id="@+id/bSqrt"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsDodaj"
                android:id="@+id/bDodaj"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp" />



            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs7"
                android:id="@+id/b7"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs8"
                android:id="@+id/b8"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs9"
                android:id="@+id/b9"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsOdejmij"
                android:id="@+id/bOdejmij"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs4"
                android:id="@+id/b4"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs5"
                android:id="@+id/b5"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs6"
                android:id="@+id/b6"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsPomnoz"
                android:id="@+id/bPomnoz"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:id="@+id/b1"
                android:text="@string/bs1"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs2"
                android:id="@+id/b2"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs3"
                android:id="@+id/b3"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsPodziel"
                android:id="@+id/bPodziel"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsPrzecinek"
                android:id="@+id/bPrzecinek"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bs0"
                android:id="@+id/b0"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsPlusMinus"
                android:id="@+id/bPlusMinus"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/bsRownaSie"
                android:id="@+id/bRownaSie"
                android:textStyle="bold"
                android:background="@drawable/calcbutton"
                android:textSize="24sp"/>

        </GridLayout>
    </LinearLayout>

</RelativeLayout>
