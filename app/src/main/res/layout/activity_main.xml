                <Button
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:id="@+id/b1"
                    android:text="@string/bs1"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:text="@string/bs2"
                    android:id="@+id/b2"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:text="@string/bs3"
                    android:id="@+id/b3"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:text="@string/bsPodziel"
                    android:id="@+id/bPodziel"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:text="@string/bsPrzecinek"
                    android:id="@+id/bPrzecinek"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="70dp"
