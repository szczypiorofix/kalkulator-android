                <Button
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:text="@string/bs5"
                    android:id="@+id/b5"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
